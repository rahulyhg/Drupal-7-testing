<?php

function testing_schema() {
$schema['testing_tb'] = array(
    
    // example (partial) specification for table "testing_tb"
	'description' => 'The base table for nodes.',
	'fields' => array(
	'uid' => array(
        'description' => 'The primary identifier for a testing_tb.',
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
	),
       	'name' => array(
        'description' => 'The title of this node, always treated as non-markup plain text.',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
	),
	'email' => array(
        'description' => 'The title of this node, always treated as non-markup plain text.',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
	),
	'password' => array(
        'description' => 'The title of this node, always treated as non-markup plain text.',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
	),
	'gender' => array(
        'description' => 'The title of this node, always treated as non-markup plain text.',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
	),
	),
	'primary key' => array('uid'),
   );
return $schema;
}

	function testing_install() {
		if(db_table_exists('testing_tb') == FALSE) {
		drupal_install_schema();
		}
	}

	function testing_uninstall() {
		if(db_table_exists('testing_tb') == TRUE) {
		drupal_uninstall_schema('testing_tb');
		}
	}
